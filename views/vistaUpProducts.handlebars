

<p>Bienvenido {{userEmail}} - Rol: {{userRole}}</p>

<h1>Formulario de carga de productos</h1>

<form action="/db/mongo/products/addproduts" method="POST">
    <div>
        <label for="id">Id</label>
        <input type="number" name="id" id="id" placeholder="id">
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" placeholder="title">
    </div>
    <div>
        <label for="description">Description</label>
        <input type="text" name="description" id="description" placeholder="description">
    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" placeholder="price">
    </div>
    <div>
        <label for="thumbnail">Thumbnail</label>
        <input type="text" name="thumbnail" id="thumbnail" placeholder="thumbnail">
    </div>
    <div>
        <label for="code">Code</label>
        <input type="text" name="code" id="code" placeholder="code">
    </div>
    <div>
        <label for="stock">Stock</label>
        <input type="number" name="stock" id="stock" placeholder="stock">
    </div>
    <button type="submit">Enviar</button>




