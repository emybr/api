<div class="tituloCarrito">
    <h1>Detalles del carrito:</h1>
</div>

<div class="cardCarrito">
    <div class="content">
        <p><strong>Email:</strong> {{carts.email}}</p>
        <div class="tituloProducto">
            <p><strong>Productos:</strong></p>
        </div>
        <ul class="listaProductos">
            {{#each carts.products}}
            {{!-- <li>id:{{this.id}}</li> --}}
            <li>Titulo: {{this.title}}</li>
            <li>Description: {{this.description}}</li>
            <li>Precio: {{this.price}}</li>
            </br>
            {{/each}}
        </ul>
        <div class="total">
            <P><strong>total:</strong> {{total}}</P>
        </div>
        <div >
            <form action="/db/mongo/carts/{{carts._id}}" method="POST">
                <button class="botonesEliminarProducto" type="submit">vaciar Carrito</button>
            </form>   
        </div>


        <form action="/mongo/tickets" method="POST">
            <input type="hidden" name="amount" value="{{total}}">
            <input type="hidden" name="purchaser" value="{{carts.email}}">
            <input type="hidden" name="email" value="{{carts.email}}">
            <input type="hidden" name="cartId" value="{{carts._id}}">
            {{#each carts.products}}
            {{#if this.id}}

            <input type="hidden" name="productIds" value="{{this.id}}">
            <input type="hidden" name="stock" value="{{this.stock}}">
            {{/if}}
            {{/each}}
            <button class="btnFinalizar" type="submit">Finalizar compra</button>
        </form>
    </div>
</div>

<footer>
  <form action="/logout" method="POST">
    <button class="botonCerrarSesionCarrito" type="submit" >Cerrar sesi√≥n</button>
  </form>
</footer>